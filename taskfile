#!/bin/bash
PATH=./node_modules/.bin:$PATH

function public:deploy {
  rsync -arv -e 'ssh -p 2233' ./build/ stringy@stringy.io:www/brenwell/  --exclude-from './excludes.txt' --progress --delete --chmod=Du=rwx,Dg=rx,Do=rx,Fu=rw,Fg=r,Fo=r
}

function public:help {
    echo "$0 <task> <args>"
    echo "Tasks:"
    compgen -A function | sed -En 's/public:(.*)/\1/p' | cat -n
}

# ---------- Do NOT edit below --------------

TIMEFORMAT="Task completed in %3lR"
time "public:${@:-help}" # make help default
